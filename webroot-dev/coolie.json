{
  "js": {
    "main": [
      "./static/js/app/**/*"
    ],
    "coolie-config.js": "./static/js/coolie-config.js",
    "dest": "./static/js/",
    "chunk": [
      "./static/js/alien/core/**/*",
      "./static/js/alien/*(libs|utils)/**/*",
      "./static/js/alien/*(widgets|ui)/**/*"
    ]
  },
  "css": {
    "dest": "./static/css/"
  },
  "html": {
    "src": [
      "./.views/**/*.html"
    ],
    "minify": true
  },
  "resource": {
    "dest": "./static/res/"
  },
  "dest": {
    "dirname": "../webroot-pro/",
    "host": "/"
  },
  "copy": [
    "./static/js/libs/**/*.js",
    "./favicon.ico",
    "./robots.txt"
  ]
}
